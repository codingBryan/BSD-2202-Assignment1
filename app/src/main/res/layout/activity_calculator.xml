<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    tools:context=".CalculatorActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonsContainer"
        android:layout_width="359dp"
        android:layout_height="561dp"
        android:background="#393939"
        android:backgroundTint="#393939"
        android:padding="20sp"
        app:cardCornerRadius="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAlignment="center">

            <LinearLayout
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bracketOpenBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFDFD"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="("
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bracketCloseBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFDFD"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text=")"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/logBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFDFD"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="mod"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/historyBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFDFD"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="HistoryBtnClicked"
                    android:padding="0sp"
                    android:text="history"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/closeBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#E53935"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="CloseBtnClicked"
                    android:padding="0sp"
                    android:text="close"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/nineBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="9"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/eightBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="8"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/sevenBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="7"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/delBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FB8C00"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="DelBtnClicked"
                    android:padding="0sp"
                    android:text="del"
                    android:textColor="#070707" />

                <Button
                    android:id="@+id/acBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#D64040"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="AcBtnClicked"
                    android:padding="0sp"
                    android:text="ac"
                    android:textSize="20sp"
                    app:iconPadding="0sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:orientation="horizontal"
                android:padding="10sp">

                <Button
                    android:id="@+id/sixBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="6"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/fiveBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="5"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/fourBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="4"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/multiplyBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFDFD"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="*"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/divideBtn"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="/"
                    android:textColor="#090909"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:orientation="horizontal"
                android:padding="10sp"
                android:paddingTop="10sp">

                <Button
                    android:id="@+id/oneBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/twoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/threeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="3"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/minusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="-"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/plusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="10sp">

                <Button
                    android:id="@+id/zeroBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#4E4E4E"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="0"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/squareBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="00"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/sqrtBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="000"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/factBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="BtnClicked"
                    android:padding="0sp"
                    android:text="."
                    android:textColor="#000000"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/sqrt"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="SqrtBtnClicked"
                    android:padding="0sp"
                    android:text="√"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="358dp"
                android:layout_height="79dp"
                android:orientation="horizontal"
                android:padding="10sp">
                <Button
                    android:id="@+id/sinBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="SinBtnClicked"
                    android:padding="0sp"
                    android:text="sin"
                    android:textAlignment="center"
                    android:textColor="#040000"
                    android:textSize="20sp" />



                <Button
                    android:id="@+id/cosine"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="CosBtnClicked"
                    android:padding="0sp"
                    android:text="cos"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tangent"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="TanBtnClicked"
                    android:padding="0sp"
                    android:text="tan"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pi"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="PiBtnClicked"
                    android:padding="0sp"
                    android:text="π"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/power"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="PowBtnClicked"
                    android:padding="0sp"
                    android:text="^"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="358dp"
                android:layout_height="81dp"
                android:orientation="horizontal"
                android:padding="10sp">

                <Button
                    android:id="@+id/cosecant"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="CosecBtnClicked"
                    android:padding="0sp"
                    android:text="cosec"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/sec"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="SecBtnClicked"
                    android:padding="0sp"
                    android:text="sec"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/cotangent"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="CotBtnClicked"
                    android:padding="0sp"
                    android:text="cot"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/factorial"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="FactBtnClicked"
                    android:padding="0sp"
                    android:text="fact"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/getAnswerBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:width="10sp"
                    android:backgroundTint="#43A047"
                    android:maxWidth="100sp"
                    android:minWidth="10sp"
                    android:onClick="GetAnswer"
                    android:padding="0sp"
                    android:text="="
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="359dp"
        android:layout_height="120dp"
        android:backgroundTint="#393939"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.905">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/expression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:padding="10sp"
                android:textColor="#A59A9A"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/answerString"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="monospace"
                android:padding="10sp"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/abeezee"
        android:text="@string/calculator"
        android:textColor="#F1F1F1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>